                android:layout_height="wrap_content"
                android:src="@drawable/drawer_handle" />
            <LinearLayout
                android:id="@id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawer_bg">
                <TextView
